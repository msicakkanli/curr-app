    .tablo
      .tablo1
        table#currency.striped.blue-grey.lighten-1.mdl-data-table
          thead
            tr
              th Adı
              th Kodu
              th Satış
              th Değişim %
          tbody
            each all in alls
              tr
                td= all.full_name
                td= all.code
                td= all.selling 
                td= all.change_rate
