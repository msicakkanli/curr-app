extends layout

 
block content

  body.has-fixed-sidenav
    header
      .navbar-fixed
        nav.navbar
          .nav-wrapper
            a.sidenav-trigger.left(href='#!', data-target='sidenav-left')
              i.material-icons.black-text menu
      ul#sidenav-left.sidenav.sidenav-fixed
        li
          a.logo-container(href='/').white-text
            | Money Tracker
            i.material-icons.left.white-text attach_money
        li.no-padding
          ul.collapsible.collapsible-accordion
            li.bold.waves-effect.active
              a.collapsible-header.white-text
                | Yatırım Araçları
                i.material-icons.chevron.white-text chevron_left
              .collapsible-body
                ul
                  li
                    a.waves-effect.active(href='/').white-text
                      | Döviz
                      i.material-icons.white-text money
                  li
                    a.waves-effect(href='/crypto').white-text
                      | KriptoPara
                      i.material-icons.white-text timeline
                  li
                    a.waves-effect(href='/stockmarket').white-text
                      | Borsa & Altın
                      i.material-icons.white-text swap_vert
            li.bold.waves-effect
              a.collapsible-header.white-text
                | Hesap İşlemleri
                i.material-icons.chevron.white-text chevron_left
              .collapsible-body
                ul
                  li
                    a.waves-effect(href='/login').white-text
                      | Giriş
                      i.material-icons.white-text person
                  li
                    a.waves-effect(href='/register').white-text
                      | Kayıt Ol
                      i.material-icons.white-text how_to_reg
    main
      .container
        .masonry.row
          .col.s12
            h2 KriptoPara Borsası
          .col.l3.m6.s12
            if btcChange > 0
                .card
                    .card-stacked
                        .card-metrics.card-metrics-static
                            .card-metric
                                .card-metric-title Bitcoin
                                .card-metric-value #{btcBuy}
                                .card-metric-change.increase
                                    i.material-icons.left keyboard_arrow_up
                                    |                 #{btcChange}
                    .card-chart
                        canvas#flush-area-chart-blue(height='100px')
            else
                .card
                    .card-stacked
                        .card-metrics.card-metrics-static
                            .card-metric
                                .card-metric-title Bitcoin
                                .card-metric-value #{btcBuy}
                                .card-metric-change.decrease
                                    i.material-icons.left keyboard_arrow_down
                                    |                 #{btcChange}
                    .card-chart
                        canvas#flush-area-chart-blue(height='100px')
          .col.l3.m6.s12
            if xrpChange > 0
                .card
                    .card-stacked
                        .card-metrics.card-metrics-static
                            .card-metric
                                .card-metric-title Ripple
