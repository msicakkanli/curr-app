          .col.l3.m6.s12
            if ltcChange > 0
                .card
                    .card-stacked
                        .card-metrics.card-metrics-static
                            .card-metric
                                .card-metric-title LiteCoin
                                .card-metric-value #{ltcBuy}
                                .card-metric-change.increase
                                    i.material-icons.left keyboard_arrow_up
                                    |                 #{ltcChange}
                    .card-chart
                        canvas#flush-area-chart-pink(height='100px')
            else
                .card
                    .card-stacked
                        .card-metrics.card-metrics-static
                            .card-metric
                                .card-metric-title LiteCoin
                                .card-metric-value #{ltcBuy}
