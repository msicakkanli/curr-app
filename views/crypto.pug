                    .card-chart
                        canvas#flush-area-chart-pink(height='100px')
        .col.s12
            h2.section-title 
            .card
                table#table-custom-elements.row-border(cellspacing='0', width='100%')
                    thead
                        tr
                            th
                            th Adı
                            th Kodu
                            th Satış
                            th Değişim %
                            th Volume
                        tbody
                            each all in alls
                                tr
                                    td
                                    td= all.full_name
                                    td= all.symbol
                                    td= all.selling
                                    td= all.change_rate
                                    td= all.market_cap
