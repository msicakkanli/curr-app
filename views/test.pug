    // jqvmap
    script(type='text/javascript', src='/javascripts/jquery.vmap.min.js')
    script(type='text/javascript', src='/javascripts/jquery.vmap.world.js', charset='utf-8')
    script(type='text/javascript', src='/javascripts/jquery.vmap.sampledata.js')
    // ChartJS
    script(type='text/javascript', src='/javascripts/Chart.js')
    script(type='text/javascript', src='/javascripts/Chart.Financial.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.7.0/fullcalendar.min.js')
    script(type='text/javascript', src='https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js')
    script(src='/javascripts/imagesloaded.pkgd.min.js')
